<div class="quote-card">
  
  <div class="quote-body">
    <h3>"<%= quote.body %>"</h3>
    <% if ( quote.background ) { %>
      <img class="quote-background" src="<%= quote.background %>" alt="">
    <% }; %>
  </div>
  <div class="quote-footer">
    <div id="like">
      <div class="button-holder">
        <% if ( quote.currentUserLiked ) { %>
          <img src="images/liked.png" class="heart" alt="" data="<%= quote._id%>">
        <% } else { %>
          <img src="images/unliked.png" class="heart" alt="" data="<%= quote._id%>">
        <% }; %>
      </div>
    </div>
    <div class="quote-info">
      <p><span class="likeCounter"><%= quote.likeCount %></span> Likes</p>
      <p><em><%= quote.from %> (<%= quote.location %>)</em></p>
    </div>
  </div>
  <% if ( currentUser._id === String(quote.owner._id)) { %>
    <a class="link" href="quotes/<%= quote._id%>/edit"></a>
  <% }; %>
</div>